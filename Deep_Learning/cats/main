    {
      "cell_type": "code",
      "source": [
        "for i in images:\n",
        "  img = load_img(i)\n",
        "  img_array = img_to_array(img)\n",
        "  img_resized, _ = resize_image(img_array, _)\n",
        "  img_expended = np.expend_dims(img_resized, axis =0)\n",
        "  prediction = model.predict(img_expended)\n",
        "  plt.figure()\n",
        "  plt.imshow(img)\n",
        "  label = 'dogs' if prediction >0,  else 'cats'\n",
        "  plt.title('()'.format(label))\n"
